<body>
	<center>
		<table border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
			<tbody>
				<%= erb :_navbar %>
				<tr style="height:10px"></tr>
		    <tr class = "main-body">
		      <td>
		        <table border="0">
		        	<tbody>
		        		<tr>
		        			<td>
		        				<center>
		        					<a id="up_8542706" href="vote?for=8542706&amp;dir=up&amp;whence=%69%74%65%6d%3f%69%64%3d%38%35%34%32%37%30%36">
		        						<div class="votearrow" title="upvote"></div>
		        					</a>
		        					<span id="down_8542706"></span>
		        				</center>
		        			</td>
		        			<td class="title">
		                <a style="color:black" href='
		                <% if @post.url=="" %>
		                  <%= "/posts/#{@post.id}" %>
		                <% else %>
		                  <%= @post.url %>
		                <% end %>'><%= @post.title %></a>
		                <% @host_url = URI.parse(@post.url).host %>
		                <% if @host_url %>
		                  <span class="comhead"> <%= "(" + @host_url.sub(/^www\./, '') + ")" %></span>
		                <% end %>
		              </td>
			        	</tr>
			        	<tr>
		              <td>
		                <center>
		                  <a id="up_8540279">
		                    <div class="votearrow rotate180" title="upvote"></div>
		                  </a>
		                </center>
		              </td>
		              <td class="subtext"> by 
		                <a href="/users/<%= @post.user.id %>"><%= @post.user.username %></a>  | 
		                <a href="/posts/<%= @post.id %>">
		                  <% if @post.comments.count == 0 %>
		                    discuss
		                  <% else %>
		                    <%= @post.comments.count %> 
		                    <% if @post.comments.count > 1 %>
		                      comments
		                    <% else %>
		                      comment
		                    <% end %>
		                  <% end %>
		                  </a>
		                  <% if @post.user.username == session[:username] %>
		                    |<a href="/posts/<%= @post.id %>/edit"> edit</a>
		                   <% end %> 
		                  <% if @post.user.username == session[:username] %>
		                   | <a href="/posts/<%= @post.id %>/confirm"> delete</a>
		                  <% end %>
		              </td>
		            </tr>
			        	<tr style="height:10px"></tr>
		            <tr>
		              <td>
		              </td>
		              <td>
		                <%= @post.text %>
		              </td>
		            </tr>
                <tr style="height:10px"></tr>
						    <tr>
						    	<td></td>
						      <td>
						        <form method="post" action="/posts/<%= @post.id %>">
						        	<input value="put" type="hidden" name="_method">
						          <table border="0">
						            <tbody>
						              <tr>
						                <td>title</td>
						                <td>
						                  <input type="text" name="title" value="<%= @post.title %>" size="50"></td>
						                </tr>
						                <tr>
						                  <td>url</td>
						                  <td>
						                    <input type="text" name="url" value="<%= @post.url %>" size="50">
						                  </td>
						                </tr>
						                <tr>
						                  <td>
						                  </td>
						                  <td>
						                    <b>or</b>
						                  </td>
						                </tr>
						                <tr>
						                  <td>text</td>
						                  <td>
						                    <textarea name="body" rows="4" cols="50"><%= @post.text %></textarea>
						                  </td>
						                </tr>
						                <tr>
						                  <td></td>
						                  <td>
						                    <input type="submit" value="update">
						                  </td>
						                </tr>
						                <tr style="height:20px"></tr>
						                <tr>
						                  <td></td>
						                  <td>Leave url blank to submit a question for discussion. If there 
						                    is no url, the text (if any) will appear at the top of the thread.
						                    <br>
						                    <br>
						                  </td>
						                </tr>
						              </tbody>
						            </table>
						          </form>
						        </td>
						      </tr>
			        </tbody>
			      </table>
			      <br>
			      <br>
		      </td>
		    </tr>    
			</tbody>
		</table>
	</center>
</body>