<body>
<center>
  <table class="main-table">
    <tr class="nav-bar">
      <td>
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
          <tbody>
            <tr>
              <td style="width:18px;padding-top:2px;padding-left:2px;padding-right:4px;">
                <a href="http://www.ycombinator.com">
                  <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px #ffffff solid;"></a>
              </td>
              <td style="line-height:12pt; height:10px;">
                <span class="pagetop">
                  <b>
                    <a href="news">Hacker News</a>
                  </b>
                  <img src="https://news.ycombinator.com/s.gif" height="1" width="10">
                  <a href="newest">new</a>
                    | <a href="newcomments">comments</a>
                    | <a href="show">show</a> 
                    | <a href="ask">ask</a> 
                    | <a href="jobs">jobs</a> 
                    | <a href="/posts/new">submit</a>
                </span>
              </td>
              <td style="text-align:right;padding-right:4px;">
                <span class="pagetop">
                  <% if @username %>
                    <a> <%= @username %> </a>
                    | <a href="/logout">logout</a>
                  <% else %>
                    <a href="/login?whence=<%= request.path[1..-1] %>">login</a>
                  <% end %>
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
    <tr style="height:10px"></tr>
    <tr class = "main-body">
      <td>
        <table>
          <tbody>
            <% @posts.each_with_index do |post, index|%>
            <tr>
              <td class="title"><%= index + 1 %></td>
              <td>
                <center>
                  <a id="up_8540279">
                    <div class="votearrow" title="upvote"></div>
                  </a>
                </center>
              </td>
              <td class="title">
                <a style="color:black" href='
                <% if post.url=="" %>
                  <%= "/post/id:#{post.id}" %>
                <% else %>
                  <%= post.url %>
                <% end %>'><%= post.title %></a>
                <% @host_url = URI.parse(post.url).host %>
                <% if @host_url %>
                  <span class="comhead"> <%= "(" + @host_url.sub(/^www\./, '') + ")" %></span>
                <% end %>
              </td>
            </tr>
            <tr>
              <td colspan="1"></td>
              <td>
                <center>
                  <a id="up_8540279">
                    <div class="votearrow rotate180" title="upvote"></div>
                  </a>
                </center>
              </td>
              <td class="subtext"> by 
                <a href="user?id=<%= post.user.id %>"><%= post.user.username %></a>  | 
                <a href="item?id=<%= post.id %>">
                  <% if post.comments.count == 0 %>
                    discuss
                  <% else %>
                    <%= post.comments.count %> 
                    <% if post.comments.count > 1 %>
                      comments
                    <% else %>
                      comment
                    <% end %>
                  <% end %>
                  </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </td>
    </tr>
    
  </table>
  
</center>
</body>