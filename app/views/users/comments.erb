<body>
<center>
  <table class="main-table">
    <%= erb :_navbar%>
    <tr style="height:10px"></tr>
    <tr class = "main-body">
      <td>
        <table>
          <tbody>
            <% @comments.each_with_index do |comment, index|%>
            <tr>
              <td class="title"><%= index + 1 %></td>
              <td>
                <center>
                  <a id="up_8542706" href="vote?for=8542706&amp;dir=up&amp;whence=%69%74%65%6d%3f%69%64%3d%38%35%34%32%37%30%36">
                    <div class="votearrow" title="upvote"></div>
                  </a>
                  <span id="down_8542706"></span>
                </center>
              </td>
              <td class="title">
                <a style="color:black" href='/comments/<%= comment.id %>'><%= comment.body %></a>
              </td>
            </tr>
            <tr>
              <td colspan="1"></td>
              <td>
                <center>
                  <a id="up_8540279">
                    <div class="votearrow rotate180" title="upvote"></div>
                  </a>
                </center>
              </td>
              <td class="subtext"> by 
                <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a> 
                |<a href="/posts/<%= comment.post_id %>"> posts</a>
                <% if comment.user.username == session[:username] %>
                  |<a href="/comments/<%= comment.id %>/edit"> edit</a>
                <% end %> 
                <% if comment.user.username == session[:username] %>
                 | <a href="/comments/<%= comment.id %>/confirm"> delete</a>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </td>
    </tr>
    
  </table>
  
</center>
</body>